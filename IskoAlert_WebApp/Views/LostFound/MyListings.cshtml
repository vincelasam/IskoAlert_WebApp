@model IskoAlert_WebApp.Models.ViewModels.LostFound.LostFoundListViewModel
@using IskoAlert_WebApp.Models.Domain.Enums

@{
    ViewData["Title"] = "My Listings";
    var activeItems = Model.Items.Where(i => i.Status != "Archived").ToList();
    var archivedItems = Model.Items.Where(i => i.Status == "Archived").ToList();
    var showActive = ViewBag.ShowArchived != true;
    var itemsToShow = showActive ? activeItems : archivedItems;
}

<div class="max-w-7xl mx-auto">

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
        <a asp-controller="LostFound" asp-action="Index" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] transition-colors">
            <i class="fa-solid fa-arrow-left"></i>
            Back to Lost & Found Feed
        </a>

        <a asp-controller="LostFound" asp-action="ReportLostItem" class="bg-[#800000] hover:bg-red-900 text-white text-sm font-bold py-2 px-6 rounded-lg shadow-sm transition-colors">
            <i class="fa-solid fa-plus mr-2"></i> Post New Item
        </a>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 min-h-[800px]">
        <h2 class="text-lg font-bold text-gray-900 mb-6">Manage My Listings</h2>
        <div class="flex gap-3 mb-8">
            <a asp-controller="LostFound"
               asp-action="MyListings"
               class="flex-1 py-3 px-4 text-sm font-semibold text-center @(showActive ? "text-white bg-[#800000] shadow-sm" : "text-gray-600 bg-gray-50 hover:bg-gray-100") rounded-lg transition-all duration-200">
                Active Items (@activeItems.Count)
            </a>
            <a asp-controller="LostFound"
               asp-action="MyListings"
               asp-route-showArchived="true"
               class="flex-1 py-3 px-4 text-sm font-semibold text-center @(!showActive ? "text-white bg-[#800000] shadow-sm" : "text-gray-600 bg-gray-50 hover:bg-gray-100") rounded-lg transition-all duration-200">
                Archived (History) (@archivedItems.Count)
            </a>
        </div>

        @if (itemsToShow.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var item in itemsToShow)
                {
                    <div class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-md transition-all">
                        <div class="h-48 w-full bg-gray-200 relative overflow-hidden">
                            <img src="@(item.ImagePath ?? "/images/placeholder.png")"
                                 alt="@item.Title"
                                 class="w-full h-full object-cover">
                            <div class="absolute top-2 right-2">
                                @if (item.Status == "Lost")
                                {
                                    <span class="bg-orange-500 text-white text-[10px] font-bold px-2 py-1 rounded shadow-sm">Lost</span>
                                }
                                else if (item.Status == "Found")
                                {
                                    <span class="bg-green-600 text-white text-[10px] font-bold px-2 py-1 rounded shadow-sm">Found</span>
                                }
                                else
                                {
                                    <span class="bg-gray-500 text-white text-[10px] font-bold px-2 py-1 rounded shadow-sm">Archived</span>
                                }
                            </div>
                        </div>

                        <div class="p-4">
                            <h3 class="font-bold text-gray-900 text-sm line-clamp-1 mb-1">@item.Title</h3>
                            <p class="text-xs text-gray-500 mb-2">@item.Category</p>
                            <p class="text-xs text-gray-500 mb-4">Posted on @item.DatePosted.ToString("MMM d, yyyy")</p>

                            <div class="flex gap-3 mt-4 pt-4 border-t border-gray-200">
                                @if (item.Status != "Archived")
                                {
                                    <a asp-controller="LostFound"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="flex-1 py-2.5 px-4 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 rounded-lg border border-gray-300 hover:border-gray-400 transition-all duration-200 text-center shadow-sm">
                                        <i class="fa-solid fa-pen-to-square mr-1.5"></i> Edit
                                    </a>
                                    <form asp-controller="LostFound"
                                          asp-action="Archive"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="flex-1 flex"
                                          onsubmit="return confirm('Are you sure you want to archive this item?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="flex-1 py-2.5 px-4 text-sm font-medium text-red-700 bg-white hover:bg-red-50 rounded-lg border border-red-300 hover:border-red-400 transition-all duration-200 shadow-sm">
                                            <i class="fa-solid fa-archive mr-1.5"></i> Archive
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <div class="flex-1 py-2 text-xs font-medium text-gray-400 text-center">
                                        Archived on @item.DatePosted.ToString("MMM d, yyyy")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fa-solid fa-inbox text-4xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-sm">
                    @if (showActive)
                    {
                        <span>You don't have any active listings yet.</span>
                    }
                    else
                    {
                        <span>You don't have any archived items.</span>
                    }
                </p>
                @if (showActive)
                {
                    <a asp-controller="LostFound" asp-action="ReportLostItem" class="inline-block mt-4 text-[#800000] hover:text-red-900 text-sm font-semibold">
                        Post your first item →
                    </a>
                }
            </div>
        }
    </div>
</div>