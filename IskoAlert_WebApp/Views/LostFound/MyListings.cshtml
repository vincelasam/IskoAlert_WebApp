@{
    ViewData["Title"] = "My Listings";
}

<div class="max-w-7xl mx-auto">

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
        <a asp-controller="LostFound" asp-action="Index" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] transition-colors">
            <i class="fa-solid fa-arrow-left"></i>
            Back to Lost & Found Feed
        </a>

        <a asp-controller="LostFound" asp-action="ReportLostItem" class="bg-[#800000] hover:bg-red-900 text-white text-sm font-bold py-2 px-6 rounded-lg shadow-sm transition-colors">
            <i class="fa-solid fa-plus mr-2"></i> Post New Item
        </a>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 min-h-[800px]">

        <h2 class="text-lg font-bold text-gray-900 mb-6">Manage My Listings</h2>

        <div class="flex gap-2 mb-8 border-b border-gray-100 pb-4">
            <button class="px-4 py-2 text-sm font-semibold text-[#800000] bg-red-50 rounded-lg border border-red-100">Active Items (2)</button>
            <button class="px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50 rounded-lg">Archived (History)</button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-md transition-all">
                <div class="h-48 w-full bg-gray-200 relative overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1613040809024-b4ef7ba99bc3?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Headphones" class="w-full h-full object-cover">
                    <div class="absolute top-2 right-2">
                        <span class="bg-orange-500 text-white text-[10px] font-bold px-2 py-1 rounded shadow-sm">Lost</span>
                    </div>
                </div>

                <div class="p-4">
                    <h3 class="font-bold text-gray-900 text-sm line-clamp-1 mb-1">Sony WH-1000XM4</h3>
                    <p class="text-xs text-gray-500 mb-4">Posted on Jan 4, 2026</p>

                    <div class="flex gap-2 mt-4 pt-4 border-t border-gray-100">
                        <button class="flex-1 py-2 text-xs font-semibold text-gray-700 bg-gray-50 hover:bg-gray-100 rounded border border-gray-200 transition-colors">
                            <i class="fa-solid fa-pen-to-square mr-1"></i> Edit
                        </button>
                        <button class="flex-1 py-2 text-xs font-semibold text-red-600 bg-red-50 hover:bg-red-100 rounded border border-red-100 transition-colors">
                            <i class="fa-solid fa-trash mr-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>

            <div class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-md transition-all">
                <div class="h-48 w-full bg-gray-200 relative overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1582140417409-f192b0222f7a?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Keys" class="w-full h-full object-cover">
                    <div class="absolute top-2 right-2">
                        <span class="bg-green-600 text-white text-[10px] font-bold px-2 py-1 rounded shadow-sm">Found</span>
                    </div>
                </div>

                <div class="p-4">
                    <h3 class="font-bold text-gray-900 text-sm line-clamp-1 mb-1">Key Ring with Keys</h3>
                    <p class="text-xs text-gray-500 mb-4">Posted on Jan 2, 2026</p>

                    <div class="flex gap-2 mt-4 pt-4 border-t border-gray-100">
                        <button class="flex-1 py-2 text-xs font-semibold text-gray-700 bg-gray-50 hover:bg-gray-100 rounded border border-gray-200 transition-colors">
                            <i class="fa-solid fa-pen-to-square mr-1"></i> Edit
                        </button>
                        <button class="flex-1 py-2 text-xs font-semibold text-red-600 bg-red-50 hover:bg-red-100 rounded border border-red-100 transition-colors">
                            <i class="fa-solid fa-trash mr-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>