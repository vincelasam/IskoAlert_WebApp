@model IskoAlert_WebApp.Models.ViewModels.LostFound.LostFoundListViewModel

@{
    ViewData["Title"] = "Lost & Found";
}


<div class="max-w-7xl mx-auto">

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
        <a asp-controller="LostFound" asp-action="MyListings" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] transition-colors">
            <i class="fa-solid fa-list-check"></i>
            Manage My Listings
        </a>

        <a asp-controller="LostFound" asp-action="ReportLostItem" class="bg-[#800000] hover:bg-red-900 text-white text-sm font-bold py-2 px-6 rounded-lg shadow-sm transition-colors">
            <i class="fa-solid fa-bullhorn mr-2"></i> Report Item
        </a>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 min-h-[800px]">

        <h2 class="text-lg font-bold text-gray-900 mb-6">Lost & Found Feed</h2>

        <!-- Search Form -->
        <form asp-controller="LostFound" asp-action="Index" method="get" class="mb-6">
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fa-solid fa-magnifying-glass text-gray-400"></i>
                </div>
                <input type="text"
                       name="keyword"
                       value="@Model.SearchKeyword"
                       class="bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-[#800000] focus:border-[#800000] block w-full pl-10 pr-10 p-3"
                       placeholder="Search items by name, description, or location...">
                @if (!string.IsNullOrEmpty(Model.SearchKeyword))
                {
                    <a asp-controller="LostFound" asp-action="Index" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600">
                        <i class="fa-solid fa-times"></i>
                    </a>
                }
            </div>
        </form>

        <!-- Status Filter Buttons -->
        <div class="flex bg-gray-50 p-1 rounded-lg mb-8 w-full sm:w-fit">
            <a asp-controller="LostFound"
               asp-action="Index"
               asp-route-keyword="@Model.SearchKeyword"
               class="flex-1 sm:flex-none px-6 py-1.5 text-sm font-bold text-gray-900 bg-white rounded shadow-sm text-center">
                All Items
            </a>
            <a asp-controller="LostFound"
               asp-action="Index"
               asp-route-keyword="@Model.SearchKeyword"
               asp-route-status="Lost"
               class="flex-1 sm:flex-none px-6 py-1.5 text-sm font-medium text-gray-500 hover:text-gray-900 text-center">
                Lost Items
            </a>
            <a asp-controller="LostFound"
               asp-action="Index"
               asp-route-keyword="@Model.SearchKeyword"
               asp-route-status="Found"
               class="flex-1 sm:flex-none px-6 py-1.5 text-sm font-medium text-gray-500 hover:text-gray-900 text-center">
                Found Items
            </a>
        </div>

        @if (Model.Items.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var item in Model.Items)
                {
                    <a asp-controller="LostFound"
                       asp-action="Details"
                       asp-route-id="@item.Id"
                       class="block group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-md transition-all">

                        <div class="h-48 w-full bg-gray-200 relative overflow-hidden">
                            <img src="@(item.ImagePath ?? "/images/placeholder.png")"
                                 alt="@item.Title"
                                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        </div>

                        <div class="p-4">
                            <div class="flex justify-between items-start mb-2">
                                <h3 class="font-bold text-gray-900 text-sm line-clamp-1">
                                    @item.Title
                                </h3>

                                <span class="bg-green-600 text-white text-[10px] font-bold px-2 py-0.5 rounded">
                                    @item.Status
                                </span>
                            </div>

                            <p class="text-xs text-gray-500 mb-4 line-clamp-2">
                                @item.DescriptionPreview
                            </p>

                            <div class="space-y-2 mb-4">
                                <div class="flex items-center gap-2 text-xs text-gray-600">
                                    <i class="fa-solid fa-location-dot w-4 text-center text-gray-400"></i>
                                    @item.CampusLocation
                                </div>

                                <div class="flex items-center gap-2 text-xs text-gray-600">
                                    <i class="fa-regular fa-calendar w-4 text-center text-gray-400"></i>
                                    @item.DatePosted.ToString("M/d/yyyy")
                                </div>
                            </div>

                            <span class="inline-block px-2 py-1 bg-gray-100 text-gray-600 text-[10px] font-semibold rounded border border-gray-200">
                                @item.Category
                            </span>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fa-solid fa-inbox text-4xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-sm">
                    @if (!string.IsNullOrEmpty(Model.SearchKeyword))
                    {
                        <span>No items found matching "@Model.SearchKeyword"</span>
                    }
                    else
                    {
                        <span>No items found</span>
                    }
                </p>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script src="~/js/search.js"></script>
}