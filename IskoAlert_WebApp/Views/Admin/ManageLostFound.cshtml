@model List<IskoAlert_WebApp.Models.ViewModels.LostFound.LostFoundItemDisplayViewModel>
@using IskoAlert_WebApp.Models.Domain.Enums;

@{
    ViewData["Title"] = "Lost & Found Management";
    Layout = "_AdminLayout";
}

<div class="max-w-7xl mx-auto">

    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">

        <div class="p-6 border-b border-gray-100">
            <h2 class="text-lg font-bold text-gray-900 mb-4">Lost & Found Management</h2>

            <form method="get" class="flex flex-col lg:flex-row gap-4">
                <!-- Search -->
                <div class="relative flex-grow">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fa-solid fa-magnifying-glass text-gray-400"></i>
                    </div>
                    <input type="text"
                           name="keyword"
                           value="@ViewBag.Search"
                           class="bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-[#2E7D32] focus:border-[#2E7D32] block w-full pl-10 p-2.5"
                           placeholder="Search by item name, ID, or reporter...">
                </div>

                <!-- Status Filter -->
                <div class="relative w-full sm:w-48">
                    <select name="statusFilter"
                            class="w-full bg-white border border-gray-300 text-gray-700 text-sm rounded-lg focus:ring-[#2E7D32] focus:border-[#2E7D32] block p-2.5 appearance-none cursor-pointer hover:bg-gray-50 transition-colors">
                        <option value="">All Status</option>
                        @foreach (var status in Enum.GetValues(typeof(ItemStatus)))
                        {
                            <option value="@status" selected="@(ViewBag.StatusFilter == status ? "selected" : null)">
                                @status
                            </option>
                        }
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-500">
                        <i class="fa-solid fa-chevron-down text-xs"></i>
                    </div>
                </div>

                <!-- Category Filter -->
                <div class="relative w-full sm:w-48">
                    <select name="categoryFilter"
                            class="w-full bg-white border border-gray-300 text-gray-700 text-sm rounded-lg focus:ring-[#2E7D32] focus:border-[#2E7D32] block p-2.5 appearance-none cursor-pointer hover:bg-gray-50 transition-colors">
                        <option value="All Categories" selected="@(ViewBag.CategoryFilter == null || ViewBag.CategoryFilter == "All Categories" ? "selected" : null)">All Categories</option>
                        @foreach (var cat in Enum.GetValues(typeof(ItemCategory)))
                        {
                            <option value="@cat" selected="@(ViewBag.CategoryFilter == cat.ToString() ? "selected" : null)">
                                @cat
                            </option>
                        }
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-500">
                        <i class="fa-solid fa-chevron-down text-xs"></i>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="bg-[#2E7D32] text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors">
                        Filter
                    </button>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 font-bold">Item ID</th>
                        <th class="px-6 py-4 font-bold">Item Name</th>
                        <th class="px-6 py-4 font-bold">Status</th>
                        <th class="px-6 py-4 font-bold">Category</th>
                        <th class="px-6 py-4 font-bold">Reporter</th>
                        <th class="px-6 py-4 font-bold">Location</th>
                        <th class="px-6 py-4 font-bold">Date Reported</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var item in Model)
                    {
                        <tr class="bg-white hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 font-medium text-gray-900">#LF-@item.Id</td>
                            <td class="px-6 py-4 font-bold text-gray-900">@item.Title</td>
                            <td class="px-6 py-4">
                                <span class="@(item.Status == "Found" ? "bg-green-100 text-green-800 border-green-200" : "bg-orange-100 text-orange-800 border-orange-200") text-xs font-bold px-2.5 py-0.5 rounded border">
                                    @item.Status
                                </span>
                            </td>
                            <td class="px-6 py-4">@item.Category</td>
                            <td class="px-6 py-4">@item.Email</td>
                            <td class="px-6 py-4">@item.CampusLocation</td>
                            <td class="px-6 py-4">@item.DatePosted.ToString("M/d/yyyy")</td>
                            <td class="px-6 py-4">
                                <div class="flex gap-3 items-center">
                                    <a asp-action="EditLostFound" asp-controller="Admin" asp-route-id="@item.Id"
                                       class="text-blue-600 hover:underline text-sm">Edit</a>
                                    @if (item.Status != "Archived")
                                    {
                                        <form asp-action="ArchiveLostFound" asp-controller="Admin" asp-route-id="@item.Id" method="post" class="inline m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    onclick="return confirm('Are you sure you want to archive this item?')"
                                                    class="text-red-600 hover:underline text-sm bg-transparent border-0 p-0 cursor-pointer">
                                                Archive
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 text-sm">Archived</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
