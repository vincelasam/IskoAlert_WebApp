@model List<IskoAlert_WebApp.Models.ViewModels.Admin.AdminIncidentReportViewModel>
@using IskoAlert_WebApp.Models.Domain.Enums;
@{
    ViewData["Title"] = "Auto-Processed Reports";
    Layout = "_AdminLayout";
}

<div class="max-w-7xl mx-auto">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Auto-Processed Reports</h2>
        <p class="text-gray-500">Review reports that were automatically accepted or rejected</p>
    </div>

    <!-- Filter Section -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 mb-6">
        <form method="get" class="flex gap-4">
            <select name="statusFilter" class="w-48 bg-white border border-gray-300 text-gray-700 text-sm rounded-lg focus:ring-[#800000] focus:border-[#800000] block p-2.5">
                <option value="">All Status</option>
                <option value="Accepted" selected="@(ViewBag.StatusFilter == "Accepted")">Accepted</option>
                <option value="Rejected" selected="@(ViewBag.StatusFilter == "Rejected")">Rejected</option>
            </select>
            <button type="submit" class="bg-[#800000] hover:bg-red-900 text-white text-sm font-semibold py-2 px-6 rounded-lg">
                Filter
            </button>
        </form>
    </div>

    <!-- Reports Table -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-500 uppercase bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-3 font-medium">Report ID</th>
                        <th class="px-6 py-3 font-medium">Type</th>
                        <th class="px-6 py-3 font-medium">Reporter</th>
                        <th class="px-6 py-3 font-medium">Credibility Score</th>
                        <th class="px-6 py-3 font-medium">Status</th>
                        <th class="px-6 py-3 font-medium">Date</th>
                        <th class="px-6 py-3 font-medium">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var report in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 font-semibold text-gray-900">#IR-@report.ReportId</td>
                            <td class="px-6 py-4">@report.IncidentType</td>
                            <td class="px-6 py-4">@report.ReporterName</td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded text-xs font-bold
                                        @(report.CredibilityScore >= 75 ? "bg-green-100 text-green-700" :
                                                                            report.CredibilityScore >= 30 ? "bg-yellow-100 text-yellow-700" :
                                                                            "bg-red-100 text-red-700")">
                                    @report.CredibilityScore
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 rounded-full text-xs font-bold
                                        @(report.Status == ReportStatus.Accepted ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                                    @report.Status
                                </span>
                            </td>
                            <td class="px-6 py-4">@report.CreatedAt.ToString("MM/dd/yyyy")</td>
                            <td class="px-6 py-4">
                                <a asp-controller="Admin" asp-action="ReviewIncident" asp-route-id="@report.ReportId"
                                   class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 px-3 py-1 rounded text-xs font-medium">
                                    Review
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>