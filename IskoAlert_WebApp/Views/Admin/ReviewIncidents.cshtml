@{
    ViewData["Title"] = "Review Incident";
    Layout = "_AdminLayout";
}

<div class="max-w-7xl mx-auto">

    <a asp-controller="Admin" asp-action="ManageIncidents" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] mb-6 transition-colors">
        <i class="fa-solid fa-arrow-left"></i>
        Back to Management
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-2 space-y-6">

            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">#IR-2025-001</h2>
                        <p class="text-gray-500 text-sm">Theft</p>
                    </div>
                    <span class="bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded border border-green-200">
                        Resolved
                    </span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-user text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Reported By</p>
                            <p class="font-medium text-gray-900">Lian Paredes</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-solid fa-location-dot text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Location</p>
                            <p class="font-medium text-gray-900">Main Library</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-calendar text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Date Submitted</p>
                            <p class="font-medium text-gray-900">12/20/2024, 10:30:00 AM</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-calendar-check text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Last Updated</p>
                            <p class="font-medium text-gray-900">1/6/2026, 4:41:27 PM</p>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="flex items-center gap-2 mb-2">
                        <i class="fa-regular fa-file-lines text-gray-400"></i>
                        <h3 class="font-semibold text-gray-900 text-sm">Description</h3>
                    </div>
                    <p class="text-sm text-gray-600 leading-relaxed">
                        Laptop was stolen from my bag at the 3rd floor reading area. The bag was beside me, but I had to use the restroom for a few minutes. When I returned, the laptop was gone. Black Dell Inspiron 15.
                    </p>
                </div>
            </div>

            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                <h3 class="text-sm font-semibold text-gray-900 mb-6">Status Timeline</h3>

                <div class="relative pl-4 border-l-2 border-gray-200 space-y-8">
                    <div class="relative">
                        <div class="absolute -left-[21px] mt-1.5 h-3 w-3 rounded-full bg-gray-400 border-2 border-white"></div>
                        <span class="bg-orange-500 text-white text-[10px] font-bold px-2 py-0.5 rounded">Pending</span>
                        <p class="text-xs text-gray-500 mt-1">12/20/2024, 10:30:00 AM</p>
                    </div>
                    <div class="relative">
                        <div class="absolute -left-[21px] mt-1.5 h-3 w-3 rounded-full bg-gray-400 border-2 border-white"></div>
                        <span class="bg-blue-500 text-white text-[10px] font-bold px-2 py-0.5 rounded">Accepted</span>
                        <p class="text-xs text-gray-500 mt-1">12/20/2024, 3:00:00 PM</p>
                        <p class="text-xs text-gray-400 italic mt-0.5">"Report received and verified"</p>
                    </div>
                    <div class="relative">
                        <div class="absolute -left-[21px] mt-1.5 h-3 w-3 rounded-full bg-gray-400 border-2 border-white"></div>
                        <span class="bg-yellow-500 text-white text-[10px] font-bold px-2 py-0.5 rounded">In-Progress</span>
                        <p class="text-xs text-gray-500 mt-1">12/22/2024, 2:20:00 PM</p>
                        <p class="text-xs text-gray-400 italic mt-0.5">"Investigation ongoing"</p>
                    </div>
                    <div class="relative">
                        <div class="absolute -left-[23px] mt-1 h-4 w-4 rounded-full border-4 border-[#800000] bg-white"></div>
                        <span class="bg-green-600 text-white text-[10px] font-bold px-2 py-0.5 rounded">Resolved</span>
                        <p class="text-xs text-gray-500 mt-1">1/6/2026, 4:41:27 PM</p>
                        <p class="text-xs text-gray-400 italic mt-0.5">"Laptop has been found. Claim at S501."</p>
                    </div>
                </div>
            </div>

        </div>

        <div class="lg:col-span-1 space-y-6">

            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                <h3 class="text-sm font-semibold text-gray-900 mb-4">Student Feedback</h3>
                <div class="bg-yellow-50 border border-yellow-100 rounded-lg p-4">
                    <p class="text-xs text-gray-500 mb-2">Resolution Rating</p>
                    <div class="flex items-center gap-2 mb-1">
                        <div class="flex text-yellow-400 text-lg">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star text-gray-300"></i>
                        </div>
                        <span class="font-bold text-gray-900 text-lg">4/5</span>
                    </div>
                    <p class="text-[10px] text-gray-400">Student satisfaction with resolution</p>
                </div>
            </div>

            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                <h3 class="text-sm font-semibold text-gray-900 mb-4">Admin Actions</h3>

                <form class="space-y-4">
                    <div>
                        <label class="block text-xs font-semibold text-gray-700 mb-1">Update Status</label>
                        <select class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-[#800000] focus:border-[#800000] block p-2.5">
                            <option>Pending</option>
                            <option>Accepted</option>
                            <option>In-Progress</option>
                            <option selected>Resolved</option>
                            <option>Rejected</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-xs font-semibold text-gray-700 mb-1">Assign Staff/Team</label>
                        <input type="text" value="Security Team A" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-[#800000] focus:border-[#800000] block p-2.5">
                    </div>

                    <div>
                        <label class="block text-xs font-semibold text-gray-700 mb-1">Admin Remarks</label>
                        <textarea rows="3" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-[#800000] focus:border-[#800000] block p-2.5">Laptop has been found. Claim at S501.</textarea>
                    </div>

                    <button type="button" class="w-full py-2.5 text-white bg-[#b56b6b] hover:bg-[#800000] focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm transition-colors flex items-center justify-center gap-2 mt-2">
                        <i class="fa-regular fa-floppy-disk"></i>
                        Save Changes
                    </button>
                </form>
            </div>

        </div>

    </div>
</div>
