@model IskoAlert_WebApp.Models.ViewModels.Admin.AdminReviewIncidentViewModel
@using IskoAlert_WebApp.Models.Domain.Enums
@{
    ViewData["Title"] = "Review Incident";
    Layout = "_AdminLayout";
}

<div class="max-w-7xl mx-auto">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
            <div class="flex items-center gap-2">
                <i class="fa-solid fa-check-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        </div>
    }

    <a asp-controller="Admin" asp-action="ManageIncidents" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] mb-6 transition-colors">
        <i class="fa-solid fa-arrow-left"></i>
        Back to Management
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-2 space-y-6">

            <!-- MAIN REPORT DETAILS -->
            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">#IR-@Model.ReportId.ToString("D4")</h2>
                        <p class="text-gray-500 text-sm">@Model.IncidentType - @Model.CampusLocation</p>
                    </div>
                    <div class="flex gap-2">
                        @{
                            var statusClass = Model.Status switch
                            {
                                ReportStatus.Pending => "bg-orange-100 text-orange-800 border-orange-200",
                                ReportStatus.Accepted => "bg-blue-100 text-blue-800 border-blue-200",
                                ReportStatus.InProgress => "bg-yellow-100 text-yellow-800 border-yellow-200",
                                ReportStatus.Resolved => "bg-green-100 text-green-800 border-green-200",
                                ReportStatus.Rejected => "bg-red-100 text-red-800 border-red-200",
                                _ => "bg-gray-100 text-gray-800 border-gray-200"
                            };
                        }
                        <span class="text-xs font-bold px-3 py-1 rounded border @statusClass">
                            @Model.Status
                        </span>

                        @if (Model.IsAutoProcessed)
                        {
                            <span class="bg-purple-100 text-purple-800 text-xs font-bold px-3 py-1 rounded border border-purple-200">
                                <i class="fa-solid fa-robot mr-1"></i> Auto-Processed
                            </span>
                        }
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-user text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Reported By</p>
                            <p class="font-medium text-gray-900">@Model.ReporterName</p>
                            <p class="text-xs text-gray-500">@Model.ReporterWebmail</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-solid fa-location-dot text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Location</p>
                            <p class="font-medium text-gray-900">@Model.CampusLocation</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-calendar text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Date Submitted</p>
                            <p class="font-medium text-gray-900">@Model.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-solid fa-gauge text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Credibility Score</p>
                            <div class="flex items-center gap-2">
                                @{
                                    var credibilityColorClass = Model.GetCredibilityColor() switch
                                    {
                                        "green" => "bg-green-100 text-green-800",
                                        "yellow" => "bg-yellow-100 text-yellow-800",
                                        "red" => "bg-red-100 text-red-800",
                                        _ => "bg-gray-100 text-gray-800"
                                    };
                                }
                                <div class="@credibilityColorClass px-2 py-1 rounded text-sm font-bold">
                                    @Model.CredibilityScore/100
                                </div>
                                <span class="text-xs text-gray-500">(@Model.GetCredibilityLevel())</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-6">
                    <div class="flex items-center gap-2 mb-2">
                        <i class="fa-solid fa-heading text-gray-400"></i>
                        <h3 class="font-semibold text-gray-900 text-sm">Title</h3>
                    </div>
                    <p class="text-gray-900 font-medium">@Model.Title</p>
                </div>

                <div class="mb-6">
                    <div class="flex items-center gap-2 mb-2">
                        <i class="fa-regular fa-file-lines text-gray-400"></i>
                        <h3 class="font-semibold text-gray-900 text-sm">Description</h3>
                    </div>
                    <p class="text-sm text-gray-600 leading-relaxed">@Model.Description</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div>
                        <div class="flex items-center gap-2 mb-2">
                            <i class="fa-regular fa-image text-gray-400"></i>
                            <h3 class="font-semibold text-gray-900 text-sm">Photo Evidence</h3>
                        </div>
                        <img src="@Model.ImagePath" alt="Evidence" class="rounded-lg border border-gray-200 max-w-md" />
                    </div>
                }
            </div>

            <!-- CREDIBILITY ANALYSIS -->
            @if (Model.IsAutoProcessed || !string.IsNullOrEmpty(Model.AnalysisReason) || Model.RedFlags.Any() || Model.PositiveSignals.Any())
            {
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                    <h3 class="text-sm font-semibold text-gray-900 mb-4 flex items-center gap-2">
                        <i class="fa-solid fa-brain text-purple-600"></i>
                        Automated Credibility Analysis
                    </h3>

                    @if (!string.IsNullOrEmpty(Model.AnalysisReason))
                    {
                        <div class="bg-gray-50 rounded-lg p-4 mb-4 border border-gray-100">
                            <pre class="text-xs text-gray-700 whitespace-pre-wrap font-sans">@Model.AnalysisReason</pre>
                        </div>
                    }

                    @if (Model.PositiveSignals.Any())
                    {
                        <div class="mb-4">
                            <h4 class="text-xs font-bold text-green-700 mb-2 uppercase tracking-wide">Positive Indicators</h4>
                            <ul class="space-y-1">
                                @foreach (var signal in Model.PositiveSignals)
                                {
                                    <li class="text-sm text-gray-600 flex items-start gap-2">
                                        <i class="fa-solid fa-check text-green-500 mt-0.5"></i>
                                        <span>@signal</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.RedFlags.Any())
                    {
                        <div>
                            <h4 class="text-xs font-bold text-red-700 mb-2 uppercase tracking-wide">Concerns Identified</h4>
                            <ul class="space-y-1">
                                @foreach (var flag in Model.RedFlags)
                                {
                                    <li class="text-sm text-gray-600 flex items-start gap-2">
                                        <i class="fa-solid fa-exclamation-triangle text-red-500 mt-0.5"></i>
                                        <span>@flag</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- ADMIN ACTIONS SIDEBAR -->
        <div class="lg:col-span-1 space-y-6">

            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                <h3 class="text-sm font-semibold text-gray-900 mb-4">Admin Actions</h3>

                <form asp-controller="Admin" asp-action="UpdateReportStatus" method="post" class="space-y-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="reportId" value="@Model.ReportId" />

                    <div>
                        <label class="block text-xs font-semibold text-gray-700 mb-1">Update Status</label>
                        <select name="newStatus" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-[#800000] focus:border-[#800000] block p-2.5">
                            <option value="Pending" selected="@(Model.Status == ReportStatus.Pending)">Pending</option>
                            <option value="Accepted" selected="@(Model.Status == ReportStatus.Accepted)">Accepted</option>
                            <option value="InProgress" selected="@(Model.Status == ReportStatus.InProgress)">In-Progress</option>
                            <option value="Resolved" selected="@(Model.Status == ReportStatus.Resolved)">Resolved</option>
                            <option value="Rejected" selected="@(Model.Status == ReportStatus.Rejected)">Rejected</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-xs font-semibold text-gray-700 mb-1">Admin Remarks</label>
                        <textarea name="remarks" rows="3" placeholder="Add notes or comments..." class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-[#800000] focus:border-[#800000] block p-2.5">@Model.AnalysisReason</textarea>
                    </div>

                    @if (Model.Status == ReportStatus.Pending)
                    {
                        <div class="pt-2 border-t border-gray-100">
                            <p class="text-xs text-gray-600 mb-3">Quick Actions for Pending Reports:</p>
                            <div class="space-y-2">
                                <button type="submit" name="newStatus" value="Accepted" class="w-full py-2 text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-xs transition-colors flex items-center justify-center gap-2">
                                    <i class="fa-solid fa-check"></i>
                                    Accept Report
                                </button>
                                <button type="submit" name="newStatus" value="Rejected" class="w-full py-2 text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-xs transition-colors flex items-center justify-center gap-2">
                                    <i class="fa-solid fa-xmark"></i>
                                    Reject Report
                                </button>
                            </div>
                        </div>
                    }

                    <button type="submit" class="w-full py-2.5 text-white bg-[#800000] hover:bg-red-900 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm transition-colors flex items-center justify-center gap-2 mt-4">
                        <i class="fa-regular fa-floppy-disk"></i>
                        Save Changes
                    </button>
                </form>
            </div>

            <!-- RECOMMENDATION CARD -->
            @if (Model.CredibilityScore >= 75)
            {
                <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                    <div class="flex items-start gap-3">
                        <i class="fa-solid fa-circle-check text-green-600 text-xl mt-0.5"></i>
                        <div>
                            <h4 class="font-bold text-green-900 text-sm mb-1">High Credibility</h4>
                            <p class="text-xs text-green-700">This report scores highly on credibility metrics. Recommended for acceptance.</p>
                        </div>
                    </div>
                </div>
            }
            else if (Model.CredibilityScore >= 30)
            {
                <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
                    <div class="flex items-start gap-3">
                        <i class="fa-solid fa-triangle-exclamation text-yellow-600 text-xl mt-0.5"></i>
                        <div>
                            <h4 class="font-bold text-yellow-900 text-sm mb-1">Manual Review Needed</h4>
                            <p class="text-xs text-yellow-700">This report requires your careful evaluation. Review the concerns and positive signals before deciding.</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="bg-red-50 border border-red-200 rounded-xl p-4">
                    <div class="flex items-start gap-3">
                        <i class="fa-solid fa-circle-xmark text-red-600 text-xl mt-0.5"></i>
                        <div>
                            <h4 class="font-bold text-red-900 text-sm mb-1">Low Credibility</h4>
                            <p class="text-xs text-red-700">This report has multiple red flags. Consider rejecting unless there are compelling reasons otherwise.</p>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>