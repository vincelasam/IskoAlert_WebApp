@model IskoAlert_WebApp.Models.ViewModels.Admin.AdminDashboardViewModel
@using IskoAlert_WebApp.Models.Domain.Enums
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900">Admin Dashboard</h2>
    <p class="text-gray-500">Manage incident reports and monitor system activity</p>
</div>

<!-- STATISTICS CARDS -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">Total Reports</span>
            <i class="fa-regular fa-file-lines text-gray-400"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.TotalReports</h3>
        <p class="text-xs text-gray-400 mt-1">All time</p>
    </div>

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">Pending</span>
            <i class="fa-solid fa-circle-exclamation text-orange-400"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.PendingReports</h3>
        <p class="text-xs text-gray-400 mt-1">Needs review</p>
    </div>

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">In Progress</span>
            <i class="fa-regular fa-clock text-yellow-400"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.InProgressReports</h3>
        <p class="text-xs text-gray-400 mt-1">Being addressed</p>
    </div>

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">Resolved</span>
            <i class="fa-regular fa-circle-check text-green-500"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.ResolvedReports</h3>
        <p class="text-xs text-gray-400 mt-1">Completed</p>
    </div>
</div>

<!-- AUTOMATION METRICS -->
@if (Model.AutoAcceptedReports > 0 || Model.AutoRejectedReports > 0 || Model.ManualReviewRequired > 0)
{
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-xl border border-purple-200 shadow-sm">
            <div class="flex justify-between items-start mb-4">
                <span class="text-purple-700 text-sm font-medium">Auto-Accepted</span>
                <i class="fa-solid fa-robot text-purple-400"></i>
            </div>
            <h3 class="text-3xl font-bold text-purple-900">@Model.AutoAcceptedReports</h3>
            <p class="text-xs text-purple-600 mt-1">Automatically processed</p>
        </div>

        <div class="bg-gradient-to-br from-red-50 to-red-100 p-6 rounded-xl border border-red-200 shadow-sm">
            <div class="flex justify-between items-start mb-4">
                <span class="text-red-700 text-sm font-medium">Auto-Rejected</span>
                <i class="fa-solid fa-robot text-red-400"></i>
            </div>
            <h3 class="text-3xl font-bold text-red-900">@Model.AutoRejectedReports</h3>
            <p class="text-xs text-red-600 mt-1">Automatically processed</p>
        </div>

        <div class="bg-gradient-to-br from-orange-50 to-orange-100 p-6 rounded-xl border border-orange-200 shadow-sm">
            <div class="flex justify-between items-start mb-4">
                <span class="text-orange-700 text-sm font-medium">Manual Review</span>
                <i class="fa-solid fa-user-check text-orange-400"></i>
            </div>
            <h3 class="text-3xl font-bold text-orange-900">@Model.ManualReviewRequired</h3>
            <p class="text-xs text-orange-600 mt-1">Requires your attention</p>
        </div>
    </div>
}

<!-- QUICK ACTIONS -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-full bg-[#800000] flex items-center justify-center text-white">
                <i class="fa-regular fa-file-lines text-xl"></i>
            </div>
            <div>
                <span class="text-gray-600 font-medium block">Review and manage all incident reports</span>
                @if (Model.ManualReviewRequired > 0)
                {
                    <span class="text-xs text-orange-600 font-medium">@Model.ManualReviewRequired pending review</span>
                }
            </div>
        </div>
        <a asp-controller="Admin" asp-action="ManageIncidents" class="bg-[#800000] hover:bg-red-900 text-white text-sm font-semibold py-2 px-6 rounded-lg transition-colors inline-block text-center whitespace-nowrap">
            Manage
        </a>
    </div>

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-full bg-[#2E7D32] flex items-center justify-center text-white">
                <i class="fa-solid fa-box-open text-xl"></i>
            </div>
            <div>
                <span class="text-gray-600 font-medium block">Monitor all lost and found listings</span>
                <span class="text-xs text-gray-500">View and manage items</span>
            </div>
        </div>
        <a asp-controller="Admin" asp-action="ManageLostFound" class="bg-[#2E7D32] hover:bg-green-800 text-white text-sm font-semibold py-2 px-6 rounded-lg transition-colors inline-block text-center whitespace-nowrap">
            View
        </a>
    </div>
</div>

<!-- RECENT REPORTS SECTION -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
        <h3 class="font-bold text-gray-900">Recent Activity</h3>
        <a asp-controller="Admin" asp-action="ManageIncidents" class="text-sm text-gray-600 hover:text-[#800000] font-medium">View All Reports</a>
    </div>

    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
            <div class="p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900">@Model.TotalReports</div>
                <div class="text-xs text-gray-500 mt-1">Total Reports</div>
            </div>
            <div class="p-4 bg-orange-50 rounded-lg">
                <div class="text-2xl font-bold text-orange-900">@Model.PendingReports</div>
                <div class="text-xs text-orange-600 mt-1">Awaiting Review</div>
            </div>
            <div class="p-4 bg-green-50 rounded-lg">
                <div class="text-2xl font-bold text-green-900">@Model.ResolvedReports</div>
                <div class="text-xs text-green-600 mt-1">Resolved</div>
            </div>
        </div>

        @if (Model.ManualReviewRequired > 0)
        {
            <div class="mt-6 p-4 bg-orange-50 border border-orange-200 rounded-lg">
                <div class="flex items-center gap-3">
                    <i class="fa-solid fa-exclamation-triangle text-orange-600"></i>
                    <div class="flex-1">
                        <p class="text-sm font-semibold text-orange-900">Action Required</p>
                        <p class="text-xs text-orange-700">You have <strong>@Model.ManualReviewRequired</strong> report(s) requiring manual review.</p>
                    </div>
                    <a asp-controller="Admin" asp-action="ManageIncidents" class="bg-orange-600 hover:bg-orange-700 text-white text-xs font-semibold py-2 px-4 rounded-lg transition-colors">
                        Review Now
                    </a>
                </div>
            </div>
        }
        else if (Model.TotalReports == 0)
        {
            <div class="mt-6 p-8 text-center">
                <i class="fa-regular fa-inbox text-4xl text-gray-300 mb-3"></i>
                <p class="text-gray-500 font-medium">No reports yet</p>
                <p class="text-sm text-gray-400 mt-1">Reports will appear here once students start submitting incidents.</p>
            </div>
        }
    </div>
</div>