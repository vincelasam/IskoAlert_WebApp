@{
    ViewData["Title"] = "Report Details";
}

<div class="max-w-6xl mx-auto">

    <a asp-controller="Home" asp-action="MyReports" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] mb-6 transition-colors">
        <i class="fa-solid fa-arrow-left"></i>
        Back to Reports
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">

                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">#IR-2025-001</h2>
                        <p class="text-gray-500 text-sm">Theft</p>
                    </div>
                    <span class="bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded border border-green-200">
                        Resolved
                    </span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-user text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Reported By</p>
                            <p class="font-medium text-gray-900">Lian Paredes</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-solid fa-location-dot text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Location</p>
                            <p class="font-medium text-gray-900">Main Library</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-calendar text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Date Submitted</p>
                            <p class="font-medium text-gray-900">12/20/2024, 10:30:00 AM</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="mt-1"><i class="fa-regular fa-calendar-check text-gray-400"></i></div>
                        <div>
                            <p class="text-xs text-gray-500">Last Updated</p>
                            <p class="font-medium text-gray-900">1/6/2026, 3:39:18 PM</p>
                        </div>
                    </div>
                </div>

                <div class="mb-8">
                    <div class="flex items-center gap-2 mb-2">
                        <i class="fa-regular fa-file-lines text-gray-400"></i>
                        <h3 class="font-semibold text-gray-900 text-sm">Description</h3>
                    </div>
                    <p class="text-sm text-gray-600 leading-relaxed">
                        Laptop was stolen from my bag at the 3rd floor reading area. The bag was beside me, but I had to use the restroom for a few minutes. When I returned, the laptop was gone. Black Dell Inspiron 15.
                    </p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4 mb-8 border border-gray-100">
                    <h3 class="font-bold text-gray-900 text-sm mb-2">Admin Remarks</h3>
                    <p class="text-sm text-gray-600">Laptop has been found. Claim at S501.</p>
                </div>

                <div class="mb-8">
                    <p class="text-xs text-gray-500 mb-1">Assigned To</p>
                    <p class="font-bold text-gray-900">Security Team A</p>
                </div>

                <button class="w-full py-2.5 border border-[#800000] text-[#800000] font-semibold rounded-lg hover:bg-red-50 transition-colors flex items-center justify-center gap-2">
                    <i class="fa-regular fa-star"></i>
                    Rate This Resolution
                </button>
            </div>
        </div>

        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
                <h3 class="font-semibold text-gray-900 mb-6">Status Timeline</h3>

                <div class="relative pl-4 border-l-2 border-gray-200 space-y-8">

                    <div class="relative">
                        <div class="absolute -left-[21px] mt-1.5 h-3 w-3 rounded-full bg-gray-400 border-2 border-white"></div>
                        <span class="bg-orange-500 text-white text-[10px] font-bold px-2 py-0.5 rounded">Pending</span>
                        <p class="text-xs text-gray-500 mt-1">12/20/2024, 10:30:00 AM</p>
                    </div>

                    <div class="relative">
                        <div class="absolute -left-[21px] mt-1.5 h-3 w-3 rounded-full bg-gray-400 border-2 border-white"></div>
                        <span class="bg-blue-500 text-white text-[10px] font-bold px-2 py-0.5 rounded">Accepted</span>
                        <p class="text-xs text-gray-500 mt-1">12/20/2024, 3:00:00 PM</p>
                        <p class="text-xs text-gray-400 italic mt-0.5">"Report received and verified"</p>
                    </div>

                    <div class="relative">
                        <div class="absolute -left-[21px] mt-1.5 h-3 w-3 rounded-full bg-gray-400 border-2 border-white"></div>
                        <span class="bg-yellow-500 text-white text-[10px] font-bold px-2 py-0.5 rounded">In-Progress</span>
                        <p class="text-xs text-gray-500 mt-1">12/22/2024, 2:20:00 PM</p>
                        <p class="text-xs text-gray-400 italic mt-0.5">"Investigation ongoing"</p>
                    </div>

                    <div class="relative">
                        <div class="absolute -left-[23px] mt-1 h-4 w-4 rounded-full border-4 border-[#800000] bg-white"></div>
                        <span class="bg-green-600 text-white text-[10px] font-bold px-2 py-0.5 rounded">Resolved</span>
                        <p class="text-xs text-gray-500 mt-1">1/6/2026, 3:39:18 PM</p>
                        <p class="text-xs text-gray-400 italic mt-0.5">"Laptop has been found. Claim at S501."</p>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
