<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style> body { font-family: 'Inter', sans-serif; } </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <header class="bg-[#800000] text-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">

            <div class="flex items-center gap-3">
                <img src="/images/pup-logo.png" alt="Logo" class="h-10 w-10">
                <div class="leading-tight">
                    <h1 class="font-bold text-lg tracking-wide">Iskolar Alert</h1>
                    <p class="text-[10px] text-yellow-400 font-medium uppercase tracking-wider">Admin Portal</p>
                </div>
            </div>

            <div class="flex items-center gap-6">

                <a asp-controller="Admin" asp-action="Notifications" class="relative cursor-pointer hover:text-yellow-400 transition-colors">
                    <i class="fa-regular fa-bell text-xl"></i>
                    <span class="absolute -top-1 -right-1 bg-yellow-400 text-[#800000] text-[10px] font-bold px-1 rounded-full">2</span>
                </a>

                <div class="flex items-center gap-3 pl-6 border-l border-red-800">
                    <div class="text-right hidden sm:block">
                        <p class="text-sm font-semibold">Admin User</p>
                        <p class="text-xs text-yellow-400">System Administrator</p>
                    </div>
                    <div class="h-8 w-8 bg-red-800 rounded-full flex items-center justify-center border border-yellow-400">
                        <i class="fa-solid fa-user-shield text-sm"></i>
                    </div>
                </div>

            </div>
        </div>
    </div>
</header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @RenderBody()
    </main>
</body>
</html>
