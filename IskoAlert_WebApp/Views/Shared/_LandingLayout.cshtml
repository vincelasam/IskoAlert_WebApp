<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Iskolar Alert</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <div class="flex items-center gap-3">
                    <img src="/images/pup-logo.png" alt="PUP Logo" class="h-10 w-10">
                    <div class="leading-tight">
                        <h1 class="font-bold text-lg tracking-wide text-[#800000]">Iskolar Alert</h1>
                        <p class="text-[10px] text-yellow-400 font-medium uppercase tracking-wider">Your Safety, Our Priority</p>
                    </div>
                </div>

                <a asp-controller="Account" asp-action="Login" class="bg-[#800000] hover:bg-red-900 text-white font-semibold px-6 py-2 rounded-lg transition-colors">
                    Login
                </a>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="bg-[#800000] text-white py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-center md:text-left">
                    <p class="font-semibold">Iskolar Alert Â© 2026</p>
                    <p class="text-sm text-yellow-400">Polytechnic University of the Philippines - Manila</p>
                </div>
                <a href="https://github.com/vincelasam/IskoAlert_WebApp" target="_blank" class="flex items-center gap-2 text-yellow-400 hover:text-yellow-300 transition-colors">
                    <i class="fab fa-github text-xl"></i>
                    <span class="font-medium">View on GitHub</span>
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
