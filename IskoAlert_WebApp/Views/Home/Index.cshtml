@model IskoAlert_WebApp.Models.ViewModels.Dashboard.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900">Welcome back, @Model.FullName!</h2>
    <p class="text-gray-500">Track your reports and browse lost & found items</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">Total Reports</span>
            <i class="fa-regular fa-file-lines text-gray-400"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.TotalReports</h3>
        <p class="text-xs text-gray-400 mt-1">All incident reports</p>
    </div>

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">Pending</span>
            <i class="fa-solid fa-circle-exclamation text-orange-400"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.PendingReports</h3>
        <p class="text-xs text-gray-400 mt-1">Awaiting review</p>
    </div>

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">In Progress</span>
            <i class="fa-regular fa-clipboard text-yellow-400"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.InProgressReports</h3>
        <p class="text-xs text-gray-400 mt-1">Being addressed</p>
    </div>

    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <span class="text-gray-500 text-sm font-medium">Lost & Found</span>
            <i class="fa-solid fa-box-open text-blue-400"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900">@Model.LostAndFoundCount</h3>
        <p class="text-xs text-gray-400 mt-1">Items listed</p>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">

    <div class="bg-white p-8 rounded-xl border border-gray-200 shadow-sm flex flex-col items-center text-center group cursor-pointer hover:border-red-200 transition-colors">
        <div class="h-14 w-14 rounded-full bg-red-100 text-[#800000] flex items-center justify-center mb-4 group-hover:bg-[#800000] group-hover:text-white transition-colors">
            <i class="fa-solid fa-circle-exclamation text-2xl"></i>
        </div>
        <h3 class="text-lg font-bold text-gray-900">Report Incident</h3>
        <p class="text-sm text-gray-500 mb-6">Submit a new incident report</p>
        <a asp-controller="IncidentReport" asp-action="ReportIncident" class="w-full block py-2.5 bg-[#800000] text-white font-semibold rounded-lg hover:bg-red-900 transition-colors">
            Submit Report
        </a>
    </div>

    <div class="bg-white p-8 rounded-xl border border-gray-200 shadow-sm flex flex-col items-center text-center group cursor-pointer hover:border-blue-200 transition-colors">
        <div class="h-14 w-14 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center mb-4 group-hover:bg-blue-600 group-hover:text-white transition-colors">
            <i class="fa-solid fa-file-contract text-2xl"></i>
        </div>
        <h3 class="text-lg font-bold text-gray-900">My Reports</h3>
        <p class="text-sm text-gray-500 mb-6">Track your incident reports</p>
        <a asp-controller="IncidentReport" asp-action="Index" class="w-full block py-2.5 bg-[#007acc] text-white font-semibold rounded-lg hover:bg-blue-600 transition-colors">
            View Reports
        </a>
    </div>

    <div class="bg-white p-8 rounded-xl border border-gray-200 shadow-sm flex flex-col items-center text-center group cursor-pointer hover:border-green-200 transition-colors">
        <div class="h-14 w-14 rounded-full bg-green-100 text-green-700 flex items-center justify-center mb-4 group-hover:bg-green-700 group-hover:text-white transition-colors">
            <i class="fa-solid fa-box text-2xl"></i>
        </div>
        <h3 class="text-lg font-bold text-gray-900">Lost & Found</h3>
        <p class="text-sm text-gray-500 mb-6">Browse lost and found items</p>
        <a asp-controller="LostFound" asp-action="Index" class="w-full block py-2.5 bg-[#2E7D32] text-white font-semibold rounded-lg hover:bg-green-800 transition-colors">
            Browse Items
        </a>
    </div>
</div>

<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
        <h3 class="font-bold text-gray-900">Recent Notifications</h3>
        <a asp-controller="Notification" asp-action="Notifications" class="text-sm text-gray-600 hover:text-[#800000] font-medium">View All</a>
    </div>

    <div class="divide-y divide-gray-100">
        @if (Model.RecentNotifications.Any())
        {
            @foreach (var notification in Model.RecentNotifications)
            {
                <div class="p-6 hover:bg-@(notification.IsRead ? "gray" : "yellow")-50 transition-colors border-l-4 @(notification.IsRead ? "border-transparent" : "border-yellow-400 bg-yellow-50")">
                    <div class="flex items-center gap-3 mb-1">
                        <h4 class="font-semibold text-gray-900">@notification.Title</h4>
                        @if (!notification.IsRead)
                        {
                            <span class="bg-yellow-400 text-xs font-bold px-2 py-0.5 rounded text-[#800000]">New</span>
                        }
                    </div>
                    <p class="text-sm text-gray-600 mb-2">@notification.Message</p>
                    <p class="text-xs text-gray-400">@notification.CreatedAt.ToString("MM/dd/yyyy, h:mm:ss tt")</p>
                </div>
            }
        }
        else
        {
            <div class="p-6 text-center text-gray-500">
                <p>No notifications yet.</p>
            </div>
        }
    </div>
</div>