@{
    ViewData["Title"] = "Lost & Found";
}

<div class="max-w-7xl mx-auto">

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
        <a asp-controller="Home" asp-action="Index" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] transition-colors">
            <i class="fa-solid fa-arrow-left"></i>
            Back to Dashboard
        </a>

        <a asp-controller="Home" asp-action="ReportLostItem" class="bg-[#800000] hover:bg-red-900 text-white text-sm font-bold py-2 px-6 rounded-lg shadow-sm transition-colors">
