@model List<IskoAlert_WebApp.Models.ViewModels.NotificationViewModel>

@{
    ViewData["Title"] = "Notifications";
    var totalUnread = Model?.FirstOrDefault()?.TotalUnread ?? 0; // for badge
}

<div class="max-w-4xl mx-auto">

    <a asp-controller="Home" asp-action="Index" class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-[#800000] mb-6 transition-colors">
        <i class="fa-solid fa-arrow-left"></i>
        Back to Dashboard
    </a>

    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">

        <div class="p-6 border-b border-gray-100 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
                <div class="flex items-center gap-3">
                    <i class="fa-regular fa-bell text-xl text-[#800000]"></i>
                    <h2 class="text-xl font-bold text-gray-900">Notifications</h2>
                </div>
                <p class="text-sm text-gray-500 mt-1">
                    @if (totalUnread > 0)
                    {
                        @($"{totalUnread} unread notification{(totalUnread > 1 ? "s" : "")}")
                    }
                    else
                    {
                        @("No unread notifications")
                    }
                </p>
            </div>

            <form asp-action="MarkAllAsRead" method="post">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                    <i class="fa-solid fa-check-double text-gray-400"></i>
                    Mark all as read
                </button>
            </form>

        </div>

        <div class="p-6 space-y-4">
            @if (Model != null && Model.Any())
            {
                foreach (var notif in Model)
                {
                    var isNew = !notif.IsRead;
                    var bgColor = isNew ? "bg-yellow-50 border-yellow-200" : "bg-white border-gray-200";
                    var iconColor = isNew ? "text-yellow-500" : "text-gray-400";

                    <div class="flex gap-4 p-4 rounded-lg border @bgColor">
                        <div class="flex-shrink-0 mt-1">
                            <i class="fa-solid fa-bell @iconColor text-xl"></i>
                        </div>
                        <div class="flex-grow">
                            <div class="flex justify-between items-start">
                                <h3 class="font-bold text-gray-900">@(!string.IsNullOrEmpty(notif.IncidentReportTitle) ? notif.IncidentReportTitle : notif.LostFoundItemTitle ?? "Notification")</h3>
                                @if (isNew)
                                {
                                    <span class="bg-yellow-400 text-[#800000] text-[10px] font-bold px-2 py-0.5 rounded">New</span>
                                }
                            </div>
                            <p class="text-sm text-gray-600 mt-1">@notif.Message</p>
                            <p class="text-xs text-gray-400 mt-2">@notif.CreatedAt.ToString("MM/dd/yyyy, h:mm:ss tt")</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-gray-500 text-center">No notifications to show.</p>
            }
        </div>
    </div>
</div>
